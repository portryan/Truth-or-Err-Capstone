<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TruthorErrCapstone" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#9A66FE</item>
        <item name="colorPrimaryVariant">#9A66FE</item>
        <item name="colorOnPrimary">#FFFFFF</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#9A66FE</item>
        <item name="colorSecondaryVariant">@color/white</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="android:windowBackground">@color/darkPurple</item>
        <item name="colorControlNormal">@color/gray</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorHint">@color/gray</item>
    </style>
    

    <style name="Theme.TruthorErrCapstone.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.TruthorErrCapstone.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>